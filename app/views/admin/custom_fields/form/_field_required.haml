.row
  .col-12
    .checkbox-container
      -if (params["field_type"] == "SellerField")|| (params["field_type"] == "BuyerField") || params[:action] == "edit"
      -else
        = form.check_box :required
        - custom_field.with_type do |type|
          - if type == :checkbox
            = form.label :required, t(".this_field_is_required_checkbox")
          - else
            = form.label :required, t(".this_field_is_required")
